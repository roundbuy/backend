# Server Configuration
NODE_ENV=development
PORT=5001
API_VERSION=v1

# Database Configuration
# For XAMPP users: DB_PASSWORD should be empty (default XAMPP MySQL has no password)
# For other MySQL installations: Set your MySQL root password here
DB_HOST=localhost
DB_PORT=3306
DB_NAME=roundbuy_db
DB_USER=root
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:19006

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Email Configuration (Required for email verification and notifications)
# For Gmail: Use App Password (not your regular password)
# Generate App Password: Google Account > Security > 2-Step Verification > App passwords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM=noreply@roundbuy.com
APP_NAME=RoundBuy
APP_URL=http://localhost:5001

# Admin Configuration
ADMIN_EMAIL=admin@roundbuy.com
ADMIN_PASSWORD=Admin@123

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Paddle Payment Gateway Configuration
# Get your credentials from: https://vendors.paddle.com/authentication
# For sandbox testing, use sandbox credentials
PADDLE_API_KEY=your-paddle-api-key-here
PADDLE_CLIENT_TOKEN=your-paddle-client-token-here
PADDLE_ENVIRONMENT=sandbox
PADDLE_WEBHOOK_SECRET=your-paddle-webhook-secret-here